datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_TEST_URL") //Connection string can be found in the .env folder. you can add your own database connection string
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement()) // This will create an auto-incrementing primary key
  createdAt DateTime  @default(now()) @map("created_at")
  email     String    @unique
  name      String?
  role      Role      @default(USER)
  posts     Post[]
}


model Post {
  id        Int       @id @default(autoincrement()) // This will create an auto-incrementing primary key
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  published Boolean  @default(false)
  title     String
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  Int       @map("author_id")
}

enum Role {
  USER
  ADMIN
}




